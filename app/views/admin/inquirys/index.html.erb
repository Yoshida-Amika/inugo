<h1>問い合わせ一覧</h1>

<div class="col-9">
<table class="table">
    <thead>
        <tr class="table-secondary">
            <th scope = "col">会員ID</th>
            <th scope = "col">ニックネーム</th>
            <th scope = "col">メールアドレス</th>
            <th scope = "col">内容</th>
        </tr>
    </thead>

    <tbody>
      <% @user.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.nickname, admin_user_path(user.id) %></td>
        <td><%= user.email %></td>
        <tb><%= user.inquiry.opinion %></tb>
      <% end %>
      </tr>
</tbody>
</div>