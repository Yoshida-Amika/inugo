<% if admin_signed_in? %>
<div class = " mx-sm-auto text-center rounded ">
  <h1>問い合わせ一覧</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col"></div>

    <div class="col-11">
      <table class="table">
        <thead>
            <tr class="table-secondary">
                <th style="width:9%">会員ID</th>
                <th style="width:10%">ニックネーム</th>
                <th style="width:15%">メールアドレス</th>
                <th style="width:56%">内容</th>
                <th style="width:7%"> </th>
            </tr>
        </thead>

        <tbody>
          <% @inquiry.each do |inquiry| %>
            <tr>
              <td><%= inquiry.user.id %></td>
              <td><%= link_to inquiry.user.nickname, admin_user_path(inquiry.user.id) %></td>
              <td><%= inquiry.user.email %></td>
              <td><%= inquiry.opinion %></td>
              <td><%= link_to "削除", admin_inquiry_path(inquiry.id), method: :delete,class: "btn btn-sm btn-danger",  "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col"></div>
  </div>
</div>
<% else %>
  <div class="d-flex justify-content-center">
    <div class="mx-5">
      <h2>このページは表示できません</h2>
    </div>
  </div>
<% end %>

