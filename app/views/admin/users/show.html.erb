<div class="d-flex justify-content-center h1">
  <h1><%= @user.nickname %>さんのユーザー詳細</h1>
</div>


<div class="d-flex justify-content-center">

   <div class="p-2 bd-highlight">
      <div class="mr-3 h3" style="width:500px;">
        <table class="table">
          <tbody>
            <tr>
              <td style="width:45%" class="table-active">会員ID </td>
              <td><%= @user.id %></td>
            </tr>

            <tr>
              <td style="width:45%" class="table-active">ニックネーム</td>
              <td><%= @user.nickname %></td>
            </tr>

            <tr>
              <td style="width:45%" class="table-active">メールアドレス</td>
              <td><%= @user.email %></td>
            </tr>

            <tr>
              <td style="width:45%" class="table-active">自己紹介文</td>
              <td><%= @user.testimonials %></td>
            </tr>

          </tbody>
        </table>
        <%= link_to edit_admin_user_path, class: "btn btn-sm nav-link btn-outline-secondary" do %>
          <h3>編集</h3>
        <% end %>
  　  </div>
   </div>

    <div class=" mt-3 overflow-auto bd-highlight">
    　<h2>投稿一覧</h2>

      <div class=" mt-3 overflow-auto bd-highlight" style="height:600px;">
      　<% @tweets.each do |tweet| %>
        <div class="border rounded border-dark p-2 my-2 h4 "style="width:500px;">
          <p>
            <%= image_tag tweet.get_image(200,200) %>
            <div class="font-weight-bold">
              <%= tweet.sub_sentence %>
            </div>
            <h6><%= tweet.created_at.strftime('%Y/%m/%d') %></h6>
            <%= link_to "削除", admin_shop_path(tweet), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
          </p>
          </div>
        <% end %>
      </div>
    </div>
</div>

