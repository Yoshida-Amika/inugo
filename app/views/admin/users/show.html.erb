<h2><%= @user.nickname %>さんのユーザー詳細</h2>
<%= link_to '編集する' ,edit_admin_user_path, class:"btn btn-success" %>

 <div class="form-group">

   <p><label class="col-sm-2">会員ID</label>
        <%= @user.id %>
   </p>

   <p><label class="col-sm-2">ニックネーム</label>
       <%= @user.nickname %>
   </p>

   <p><label class="col-sm-2">メールアドレス</label>
       <%= @user.email %>
   </p>
　</div>

　<h2>投稿一覧</h2>

　<% @tweets.each do |tweet| %>
<div>
<p>
  <%= image_tag tweet.get_image(200,200) %>
    <%= tweet.sub_sentence %>
    <h6><%= tweet.created_at.strftime('%Y/%m/%d') %></h6>
     <a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_path" rel="nofollow" data-method="delete" href="/admin/users/<%= @user.id %>">削除</a>

  <% end %>
</p>
</div>