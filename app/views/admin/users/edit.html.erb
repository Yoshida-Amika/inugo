<% if admin_signed_in? %>
<div class = "border border-dark col-md-5 col-sm-10 mx-2 mx-sm-auto text-center rounded px-1 my-5">
<h1>ユーザー編集</h1>

<%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>

      <p><label for="inputName" class="col-sm-2">ニックネーム</label>
            <%= f.text_field :nickname, autofocus: true, id:"inputLastnickname", placeholder:"ニックネーム"%>
      </p>

      <p><label for="inputName">メールアドレス</label>
            <%= f.text_field :email, autofocus: true, id:"inputLastemail", placeholder:"メールアドレス"%>
      </p>

<div class="actions">
<%= f.submit "編集内容を保存", class:"btn btn-success" %>
</div>
<% end %>
</div>
<% else %>
  <div class="d-flex justify-content-center">
    <div class="mx-5">
      <h2>このページは表示できません</h2>
    </div>
  </div>
<% end %>