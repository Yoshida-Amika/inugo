<div class = " mx-sm-auto text-center rounded ">
  <h1>ユーザー一覧</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col"></div>

      <div class="col-9">
          <table class="table">
            <thead>
                <tr class="table-secondary">
                    <th scope = "col">会員ID</th>
                    <th scope = "col">ニックネーム</th>
                    <th scope = "col">メールアドレス</th>
                </tr>
            </thead>

            <tbody>
              <% @user.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= link_to user.nickname, admin_user_path(user.id) %></td>
                  <td><%= user.email %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    <div class="col"></div>
  </div>
</div>


