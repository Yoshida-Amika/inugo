<h1>お店編集</h1>

<%= form_with model: @shop, url: admin_shop_path(@shop.id), method: :patch do |f| %>

<h3>ジャンル選択</h3>
<h4>
  <!--ジャンルボタン（複数選択可）-->
<%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) do |b| %>
      <%= b.label { b.check_box + b.text } %>
<% end %>
<!---->
</h4>

  <h3>名前</h3>
    <%= f.text_field :name %>
  <h3>お店のURL</h3>
    <%= f.text_area :site_url %>
  <h3>郵便番号</h3>
    <%= f.text_field :postal_code %>
  <h3>住所</h3>
  <%= f.text_area :address %>
  <h3>電話番号</h3>
    <%= f.text_field :telephone_number %>

  <p><%= f.submit '保存' %></p>

  <p><%= link_to "削除", admin_shop_path(@shop.id), method: :delete, "data-confirm" => "消しますか？" %></p>

<% end %>