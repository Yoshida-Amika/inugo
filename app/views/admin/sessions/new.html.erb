<div class = "border border-dark col-md-5 col-sm-10 mx-2 mx-sm-auto text-center rounded px-1 my-5">
<h1>管理者ログイン</h1>

<%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="field">
    <label >メールアドレス</label><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <label class="col-sm-2">パスワード</label><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
</div>

