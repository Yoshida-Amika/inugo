<h2>会員情報</h2>
<p>名前</p>
<p><%= @user.nickname %></p>
<p>メールアドレス</p>
<p><%= @user.email %></p>
<%= link_to "退会する", customer_confirmation_path(current_user) %>

<h2>
  投稿一覧
  <%= link_to "投稿", new_tweet_path %>
</h2>
<h3><%= link_to "みんなの投稿を見る", everyone_tweet_path %></h3>
<% @tweets.each do |tweet| %>
<div>
<p>
  <%= image_tag tweet.get_image(200,200) %>
  <%= tweet.sub_sentence %>
  <h6><%= tweet.created_at.strftime('%Y/%m/%d') %></h6>
  <%= link_to "編集", edit_tweet_path(tweet.id) %>

  <% end %>
</p>

</div>
